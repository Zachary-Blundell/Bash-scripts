#!/usr/bin/env bash
#    __________ __  __   ______                            __
#   / ___/ ___// / / /  / ____/___  ____  ____  ___  _____/ /_
#   \__ \\__ \/ /_/ /  / /   / __ \/ __ \/ __ \/ _ \/ ___/ __/
#  ___/ /__/ / __  /  / /___/ /_/ / / / / / / /  __/ /__/ /_
# /____/____/_/ /_/   \____/\____/_/ /_/_/ /_/\___/\___/\__/
# Author : Zachary Blundell
# sconnect â€“ pick an alias from ~/.ssh/config and connect to it
# Works with GNU awk or any POSIX awk.

set -euo pipefail

CONFIG_FILE="${HOME}/.ssh/config"

# ---------- sanity checks ----------------------------------------------------
if [[ ! -f "$CONFIG_FILE" ]]; then
  printf "âŒ  %s not found â€“ nothing to do.\n" "$CONFIG_FILE" >&2
  exit 1
fi

# ---------- harvest host aliases --------------------------------------------
#  â€¢ we look only at lines that *start* with the word â€œHostâ€ (case-insensitive)
#  â€¢ we ignore any alias that contains * or ?  (wild-cards / patterns)
#  â€¢ we split â€œHost a b câ€ into three separate aliases
#  â€¢ we deduplicate and sort for a tidy menu

mapfile -t HOSTS < <(
  awk '
    # Only lines whose 1st field is "Host" (any case)
    tolower($1) == "host" {
      # Walk through all remaining fields on that line
      for (i = 2; i <= NF; i++) {
        # Skip wild-card patterns
        if ($i ~ /[*?]/) next
        print $i
      }
    }
  ' "$CONFIG_FILE" |
    grep -v "github.com" | # filter out github
    sort -u
)

if [[ "${#HOSTS[@]}" -eq 0 ]]; then
  printf "âŒ  No explicit Host aliases found in %s.\n" "$CONFIG_FILE" >&2
  exit 1
fi

# ---------- interactive menu -------------------------------------------------
echo "ğŸ”  Select the SSH host you want to connect to:"

HOST=$(
  printf '%s\n' "${HOSTS[@]}" | fzf --height=40% --prompt='SSH > ' \
    --color=bg+:#313244,bg:#1e1e2e,spinner:#f5e0dc,hl:#f38ba8 \
    --color=fg:#cdd6f4,header:#f38ba8,info:#cba6f7,pointer:#f5e0dc \
    --color=marker:#b4befe,fg+:#cdd6f4,prompt:#cba6f7,hl+:#f38ba8 \
    --color=selected-bg:#45475a \
    --color=border:#313244,label:#cdd6f4 \
    --border="rounded" --border-label="SSH Connect" --border-label-pos="0" --preview-window="border-rounded" \
    --padding="2" --margin="20%" --marker="" \
    --pointer="ğŸš€" --separator="â”€" --scrollbar="â”‚" --layout="reverse" \
    --info="right"
) || exit

exec ssh "$HOST"
